<% layout("./layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Sign up on BucketBliss</h1>
    <div class= " col-6 offset-3">
        <form method="POST" action="/signup">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input placeholder="Enter username " name="username" class="form-control" id="username" required>
             </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" placeholder="Enter Email " name="email" class="form-control" id="email" required>
             </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input placeholder="Enter password " name="password" class="form-control" id="password" type="password" required>
             </div>
             <button class="btn btn-success mb-12">Sign Up
             </button>

        </form>
    </div>
</div>